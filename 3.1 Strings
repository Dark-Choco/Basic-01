name = 'Anna'
name_length = len(name)
print("The name is", name, "and the length of name is", name_length)

print (name[0]) #Getting the first char

name = 'Anna Bananas'
name_last_char = name[len(name)-1] #Getting the last char
print (name_last_char)

name = 'anna-bannanas'
print (name[4]) #Char starts from 0

